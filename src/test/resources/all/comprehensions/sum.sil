field val: Int

function r(i: Int): Ref

function add(i1: Int, i2: Int): Int
    ensures result == i1 + i2

method test(a: Array) {
    assume (comp i: Int :: {i >= 0 && i <= 10} (r(i).val, add, 0)) == 10
    r(5).val := r(5).val + 5
    assert (comp i: Int :: {i >= 0 && i <= 10} (r(i).val, add, 0)) == 15
}