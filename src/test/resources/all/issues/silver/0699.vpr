field f: Bool

predicate segment(x: Ref) {
    //:: ExpectedOutput(consistency.error)
    acc(x.f, wildcard) && (x.f ==> acc(x.f, write - wildcard))
}


function foo(x: Int): Int
{
    x <= 0 ? 0 : 1 + bar(x - 1)
}

function bar(x: Int): Int
    //:: ExpectedOutput(consistency.error)
    ensures foo(x) > 9
{
    x <= 0 ? 0 : 1 + foo(x - 1)
}