import "../decreaseOrder/importAllDec.sil"

function t1(x: Int, y: Int): Int
requires x >= 0
requires y >= 0
ensures decreases(x, y)
//decreases(x, 1)
{
    y==0 ? x : t2(x, false) + t1(x+1, y-1)
}

function t2(y: Int, z: Bool): Int
requires y >= 0
ensures decreases(y, z)
//decreases(y, z)
{
    y==0 ? y : t1(y-1, y+y)
}
