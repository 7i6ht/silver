import "../decreaseOrder/int_decreases.sil"

function t1(x: Int): Int
requires x >= 0
ensures decreases(x)
//decreases(x)
{
    x==0 ? x : t2(x)
}

function t2(y: Int): Int
requires y >= 0
ensures decreases(y)
//decreases(y)
{
    y==0 ? y : t3(y)
}

function t3(z: Int): Int
requires z >= 0
ensures decreases(z)
//decreases(z)
{
    z==0 ? z : t1(-1)
}
